@using static Microsoft.AspNetCore.Components.Web.RenderMode
@inject IHostEnvironment Env


<!DOCTYPE html>
<html lang="en">

<head>
    @if (Env.IsDevelopment()) //A fix for dev and prod base URL.  
{
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="HomeAppsBlazerServer.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
    }
    else
    {
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <base href="/MyHomeApps/" />
        <link rel="stylesheet" href="/MyHomeApps/bootstrap/bootstrap.min.css" />
        <link rel="stylesheet" href="/MyHomeApps/app.css" />
        <link rel="stylesheet" href="/MyHomeApps/HomeAppsBlazerServer.styles.css" />
        <link rel="icon" type="image/png" href="wwwroot/favicon.png" />
        <HeadOutlet />
    }
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>
